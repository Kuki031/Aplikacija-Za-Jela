@model RestoranJelaRPA.Models.Recept

<h2> Brisanje proizvoda: @Model.NazivJela</h2>
<h4>Jeste li sigurni u brisanje iznad navedenog proizvoda?</h4>
<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NazivJela)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NazivJela)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index">Natrag na popis recepata</a>
    </form>
</div>
